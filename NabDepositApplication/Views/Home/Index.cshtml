@model string
@{
    ViewBag.Title = "Home Page";
}

<h2>Hello,</h2>

<p>
    Have a nice day
</p>
<div class="container">
    <div class="row">
        <div class="col-md-12 pull-up">


        </div>
    </div>
    <div class="row">
        <div class="col-md-12 enable-buy">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Select an action</h3>
                </div>
                <div class="panel-body">
                    <form>
                        <fieldset>
                            <select name="deposits" id="depositoptions">
                                <option value="1">Hold</option>
                                <option value="2">Buy</option>
                                <option value="3">Sell</option>
                            </select>
                            <div>
                                <button id="btn_Buy" class="btn-primary btn" onclick="depositsModule.Buy(); return false;">SUBMIT</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 enable-sell">
            @* Live Current Deposits *@
            <h2>Current deposits</h2>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Current deposits</h3>
                </div>
                <div class="panel-body">
                    <div id="deposits">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Principal</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Interest Rate</th>
                                    <th>Term</th>
                                    <th>Maturity Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-12 enable-sell">
            @* Live Current Deposits *@
            <h2>Total Maturity Amount</h2>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Total Maturity Amount</h3>
                </div>
                <div class="panel-body">
                    <div id="deposittotal">

                    </div>
                </div>
            </div>
        </div>
    </div>



</div>
@Scripts.Render("~/bundles/app/deposit")

